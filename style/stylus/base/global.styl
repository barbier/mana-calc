html
  font-family 'Open Sans', sans-serif
  font-size 10px

  @media screen and (min-width: 600px)
    font-size 10.5px

  @media screen and (min-width: 900px)
    font-size 11px

body
  background $primary-color
  box-sizing border-box
  color $text-color
  font-size 1.5rem
  padding 1rem

*
  border 0
  margin 0
  padding 0
  vertical-align baseline

*
*:before
*:after
  box-sizing inherit
  font-size inherit
  font-family inherit
